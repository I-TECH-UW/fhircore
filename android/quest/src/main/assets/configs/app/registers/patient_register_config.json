{
  "appId": "app",
  "configType": "register",
  "id": "patient_register",
  "fhirResource": {
    "baseResource": {
      "resource": "Patient"
    },
    "relatedResources": [
      {
        "resource": "Immunization",
        "searchParameter": "patient"
      }
    ]
  },
  "filter": {
    "visible": true,
    "display": "Show overdue",
    "rules": [
      {
        "name": "filter",
        "condition": "",
        "actions": [
          ""
        ]
      }
    ]
  },
  "searchBar": {
    "visible": true,
    "display": "Search name or ID",
    "rules": [
      {
        "name": "searchBar",
        "condition": "",
        "actions": [
          ""
        ]
      }
    ]
  },
  "registerCard": {
    "rules": [
      {
        "name": "patientName",
        "condition": "true",
        "actions": [
          "data.put('patientName', fhirPath.extractValue(Patient, 'Patient.name.given'))"
        ]
      }
    ],
    "views": [
      {
        "viewType": "COLUMN",
        "children": [
          {
            "viewType": "COMPOUND_TEXT",
            "primaryText": "Example of concatenated text: {$patientName}",
            "primaryTextColor": "#000000",
            "secondaryText": "G6PD",
            "weight": 0.75
          },
          {
            "viewType": "ROW",
            "children": []
          }
        ]
      }
    ]
  }
}
