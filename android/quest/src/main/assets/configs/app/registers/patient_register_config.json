{
  "appId": "app",
  "configType": "register",
  "id": "patient_register",
  "fhirResource": {
    "baseResource": {
      "resource": "Patient"
    },
    "relatedResources": [
      {
        "resource": "Immunization",
        "searchParameter": "patient"
      }
    ]
  },
  "filter": {
    "visible": true,
    "display": "Show overdue",
    "rules": [
      {
        "name": "filter",
        "condition": "",
        "actions": [
          ""
        ]
      }
    ]
  },
  "searchBar": {
    "visible": true,
    "display": "Search name or ID",
    "rules": [
      {
        "name": "searchBar",
        "condition": "",
        "actions": [
          ""
        ]
      }
    ]
  },
  "registerCard": {
    "rules": [
      {
        "name": "familyName",
        "condition": "true",
        "actions": [
          "data.put('patientName', fhirPath.extractValue(Patient, 'Patient.name.given'))"
        ]
      }
    ],
    "views": [
      {
        "viewType": "COLUMN",
        "children": [
          {
            "viewType": "SERVICE_CARD",
            "details": [
              {
                "viewType": "COMPOUND_TEXT",
                "primaryText": "Household Name HH",
                "primaryTextColor": "#000000"
              },
              {
                "viewType": "COMPOUND_TEXT",
                "primaryText": "Town/Village",
                "primaryTextColor": "#5A5A5A",
                "separator": "-",
                "secondaryText": "HH No.",
                "secondaryTextColor": "#5A5A5A"
              },
              {
                "viewType": "COMPOUND_TEXT",
                "primaryText": "Last visited yesterday",
                "primaryTextColor": "#5A5A5A"
              }
            ],
            "showVerticalDivider": true,
            "serviceMemberIcons": "PREGNANT_WOMAN,CHILD,CHILD",
            "serviceButton": {
              "visible": true,
              "text": "2",
              "status": "OVERDUE",
              "smallSized": false
            }
          }
        ]
      }
    ]
  }
}
