{
  "appId": "app",
  "configType": "register",
  "id": "patient_register",
  "fhirResource": {
    "baseResource": {
      "resource": "Patient"
    },
    "relatedResources": [
      {
        "resource": "Immunization",
        "searchParameter": "patient"
      }
    ]
  },
  "filter": {
    "visible": true,
    "display": "Show overdue",
    "rules": [
      {
        "name": "filter",
        "condition": "",
        "actions": [
          ""
        ]
      }
    ]
  },
  "searchBar": {
    "visible": true,
    "display": "Search name or ID",
    "rules": [
      {
        "name": "searchBar",
        "condition": "",
        "actions": [
          ""
        ]
      }
    ]
  },
  "registerCard": {
    "rules": [
      {
        "name": "patientName",
        "condition": "true",
        "actions": [
          "data.put('patientName', fhirPath.extractValue(Patient, 'Patient.name.given'))"
        ]
      }
    ],
    "views": [
      {
        "viewType": "COLUMN",
        "children": [
          {
            "viewType": "COMPOUND_TEXT",
            "primaryText": "Patient Name, Age, Gender |patientName|",
            "primaryTextColor": "#000000"
          },
          {
            "viewType": "ROW",
            "children": [
              {
                "viewType": "COMPOUND_TEXT",
                "primaryText": "TB",
                "primaryTextColor": "#5A5A5A",
                "secondaryText": "Negative",
                "secondaryTextColor": "#1DB11B"
              },
              {
                "viewType": "COMPOUND_TEXT",
                "primaryText": "G6PD Status",
                "primaryTextColor": "#5A5A5A",
                "secondaryText": "Positive",
                "secondaryTextColor": "#FF333F"
              }
            ]
          },
          {
            "viewType": "COMPOUND_TEXT",
            "primaryText": "Last seen on Thursday",
            "primaryTextColor": "#5A5A5A"
          }
        ]
      }
    ]
  }
}
