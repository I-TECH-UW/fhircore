{
  "appId": "app",
  "configType": "application",
  "theme": "DEFAULT",
  "appTitle": "Quest",
  "registerDate": "2020-10-27",
  "reportRepeatTime": "23:22",
  "remoteSyncPageSize": 100,
  "languages": [
    "en",
    "sw",
    "fr"
  ],
  "useDarkTheme": false,
  "syncInterval": 30,
  "syncStrategy": [
    "Location",
    "Organization",
    "CareTeam",
    "Practitioner"
  ],
  "loginConfig": {
    "showLogo": true,
    "enablePin": true
  },
  "deviceToDeviceSync": {
    "resourcesToSync": [
      "Group",
      "Patient",
      "CarePlan",
      "Task",
      "Encounter",
      "Observation",
      "Condition",
      "Questionnaire",
      "QuestionnaireResponse",
      "RelatedPerson",
      "List",
      "Flag"
    ]
  },
  "eventWorkflows": [
    {
      "eventType": "RESOURCE_CLOSURE",
      "eventResources": [
        {
          "id": "sickChildCarePlanToBeClosed",
          "resource": "CarePlan",
          "configRules": [
            {
              "name": "patientId",
              "condition": "true",
              "actions": [
                "data.put('patientId', fhirPath.extractValue(CarePlan, 'CarePlan.subject.reference'))"
              ]
            },
            {
              "name": "carePlanId",
              "condition": "true",
              "actions": [
                "data.put('carePlanId', fhirPath.extractValue(CarePlan, 'CarePlan.id'))"
              ]
            }
          ],
          "dataQueries": [
            {
              "paramName": "_id",
              "filterCriteria": [
                {
                  "dataType": "ID",
                  "computedRule": "carePlanId"
                }
              ]
            }
          ],
          "relatedResources": [
            {
              "resource": "Task",
              "searchParameter": "based-on"
            }
          ]
        },
        {
          "id": "sickChildConditionToBeClosed",
          "resource": "Condition",
          "configRules": [
            {
              "name": "patientId",
              "condition": "true",
              "actions": [
                "data.put('patientId', fhirPath.extractValue(Condition, 'CarePlan.subject.reference'))"
              ]
            }
          ],
          "dataQueries": [
            {
              "paramName": "code",
              "filterCriteria": [
                {
                  "dataType": "CODEABLECONCEPT",
                  "value": {
                    "system": "http://snomed.info/sct",
                    "code": "275142008"
                  }
                }
              ]
            },
            {
              "paramName": "subject",
              "filterCriteria": [
                {
                  "dataType": "REFERENCE",
                  "computedRule": "patientId"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
