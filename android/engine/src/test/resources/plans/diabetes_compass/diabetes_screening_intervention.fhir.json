            "expression": "$this is Patient and %resource.entry.where(resource is QuestionnaireResponse).resource.where(questionnaire = 'Questionnaire/dc-diabetes-screening').exists() and %resource.entry.where(resource is QuestionnaireResponse).resource.descendants().where((linkId='refer-client-choice') and answer.value.code = 'refer-client').exists()"
          }
        }
      ],
      "participant": [
        {
          "type": "practitioner",
          "role": {
