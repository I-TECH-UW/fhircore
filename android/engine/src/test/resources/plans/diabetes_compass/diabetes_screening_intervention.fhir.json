  "action": [
    {
      "prefix": "1",
      "description": "This will initialize CarePlan on Diabetes Screening",
      "priority": "routine",
      "reason": [
        {
          "coding": [
            {
              "system": "http://hl7.org/fhir/action-reason-code",
              "code": "risk-assessment",
              "display": "Risk assessment"
            }
          ]
        }
      ],
      "condition": [
        {
          "kind": "applicability",
          "expression": {
            "language": "text/fhirpath",
            "expression": "$this is Patient and %resource.entry.where(resource is QuestionnaireResponse).resource.where(questionnaire = 'Questionnaire/dc-patient-registration').exists()"
          }
        }
      ],
      "type": {
        "coding": [
          {
            "system": "http://terminology.hl7.org/CodeSystem/action-type",
            "code": "create",
            "display": "Create"
          }
        ]
      },
      "definitionCanonical": "#dc-init-care-plan-activity"
    },
    {
      "prefix": "1",
      "description": "Generate a screening task when the patient has not been screened for diabetes",
      "priority": "routine",
      "condition": [
        {
          "kind": "applicability",
          "expression": {
            "language": "text/fhirpath",
            "expression": "$this is Patient and ($this.birthDate >= today() - 70 'years') and %resource.entry.where(resource is QuestionnaireResponse).resource.where(questionnaire = 'Questionnaire/dc-patient-registration').exists()"
          }
        }
      ],
      "participant": [
        {
          "type": "practitioner",
          "role": {
            "coding": [
              {
                "system": "http://hl7.org/fhir/ValueSet/action-participant-type",
                "code": "practitioner",
                "display": "Practitioner"
              }
            ]
          }
        }
      ],
      "type": {
        "coding": [
          {
            "system": "http://terminology.hl7.org/CodeSystem/action-type",
            "code": "create",
            "display": "Create"
          }
        ]
      },
      "definitionCanonical": "#routine-screening-task",
      "transform": "http://hl7.org/fhir/StructureMap/routine-screening-sm"
    },
    {
      "prefix": "1",
      "description": "Generate a three-year follow-up when the patient has low risk of diabetes from initial screening",
      "priority": "routine",
      "condition": [
        {
          "kind": "applicability",
          "expression": {
            "language": "text/fhirpath",
            "expression": "$this is Patient and %resource.entry.where(resource is QuestionnaireResponse).resource.where(questionnaire = 'Questionnaire/dc-diabetes-screening').exists() and %resource.entry.where(resource is QuestionnaireResponse).resource.descendants().where((linkId='score-calculations') and answer.value < 0.163323142).exists() and %resource.entry.where(resource is QuestionnaireResponse).resource.descendants().where((linkId='hypertension-risk') and answer.value = false).exists()"
          }
        }
      ],
      "participant": [
        {
          "type": "practitioner",
          "role": {
            "coding": [
              {
                "system": "http://hl7.org/fhir/ValueSet/action-participant-type",
