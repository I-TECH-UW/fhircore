<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:listDivider">@color/white_slightly_opaque</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="questionnaire_theme">@style/AppTheme.Questionnaire</item>
        <!-- This Theme override seems to be causing the radio buttons to NOT render
        <item name="questionnaire_theme">@style/Theme.MaterialComponents.Light.DarkActionBar</item> -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#f40</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#09f</item>
    </style>

    <style name="CalenderViewCustom" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Questionnaire" parent="Theme.Questionnaire">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="questionnaireSubmitButtonStyle">@style/Quest.Questionnaire.SubmitButtonStyle</item>
        <item name="questionnaireQuestionTextStyle">@style/Quest.Questionnaire.QuestionTextStyle</item>
        <item name="questionnaireCheckBoxStyle">@style/Quest.Questionnaire.CheckBoxStyle</item>
        <item name="questionnaireRadioButtonStyle">@style/Quest.Questionnaire.RadioButtonStyle</item>
        <item name="questionnaireTextInputLayoutStyle">@style/Quest.Questionnaire.TextInputLayoutStyle</item>
        <item name="questionnaireDropdownLayoutStyle">@style/Quest.Questionnaire.DropdownLayoutStyle</item>
    </style>

    <style name="Quest.Questionnaire.SubmitButtonStyle" parent="Questionnaire.SubmitButtonStyle">
        <item name="android:text">@string/str_save</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/rounded_submit_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Quest.Questionnaire.QuestionTextStyle" parent="TextAppearance.Material3.TitleLarge">

    </style>

    <style
        name="Quest.Questionnaire.CheckBoxStyle"
        parent="Questionnaire.CheckBoxStyle"
        >
        <item name="android:button">@drawable/checkbox_inset</item>
        <item name="buttonTint">@color/checkbox_checked_color</item>
        <item name="android:textColor">@color/checked_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/checkbox_background</item>
        <item name="android:padding">14dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style
        name="Quest.Questionnaire.RadioButtonStyle"
        parent="Questionnaire.RadioButtonStyle"
        >
        <item name="android:button">@drawable/radio_button_inset</item>
        <item name="buttonTint">@color/checkbox_checked_color</item>
        <item name="android:textColor">@color/checked_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/checkbox_background</item>
        <item name="android:padding">14dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style
        name="Quest.Questionnaire.TextInputLayoutStyle"
        parent="Questionnaire.TextInputLayoutStyle"
        >
        <item name="boxStrokeColor">@color/input_field_border_color</item>
    </style>

    <style
        name="Quest.Questionnaire.DropdownLayoutStyle"
        parent="Questionnaire.DropdownLayoutStyle"
        >
        <item name="boxStrokeColor">@color/input_field_border_color</item>
    </style>

</resources>
